generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -------------------------------------------------------------------------- //
//                                    Users                                   //
// -------------------------------------------------------------------------- //

model User {
  id        String    @id @default(uuid())
  address   String    @unique
  name      String?
  email     String?   @unique
  username  String    @unique
  avatarUrl String
  bannerUrl String?
  listings  Listing[]
}

// -------------------------------------------------------------------------- //
//                                  Listings                                  //
// -------------------------------------------------------------------------- //

model Listing {
  id          Int      @id @default(autoincrement())
  address     String   @unique
  nonce       String
  tx          String   @unique
  seller      User     @relation(fields: [sellerId], references: [id])
  sellerId    String
  coverUri    String?
  description String?
  isConfirmed Boolean  @default(false)
  isExternal  Boolean  @default(false) // Created calling the contract directly
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
