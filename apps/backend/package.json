{
  "name": "@neftie/backend",
  "private": true,
  "version": "0.0.0",
  "main": "dist/app.js",
  "yarn.build": {
    "input": "src",
    "output": "dist"
  },
  "scripts": {
    "dev": "yarn build && TS_NODE_BASEURL=./dist tsc-watch -b --onSuccess 'nodemon --exec node -r tsconfig-paths/register ./dist/app.js' --noClear",
    "clean": "rimraf -rf ./dist tsconfig.tsbuildinfo",
    "build": "tsc -b",
    "env:sync": "env2ts --in .env --out ./src/config/constants.ts",
    "lint": "eslint \"./src/**/*.{js,ts}\"",
    "format": "prettier --check \"./src/**/*.{js,ts}\"",
    "db:migrate": "yarn workspace @neftie/prisma migrate:deploy",
    "env:pull": "dotenv-vault pull development .env",
    "env:push": "dotenv-vault push"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.83.0",
    "@godaddy/terminus": "4.10.2",
    "@neftie/common": "*",
    "@neftie/contracts": "*",
    "@neftie/prisma": "*",
    "@neftie/subgraph": "*",
    "@sentry/node": "6.19.2",
    "@sentry/tracing": "6.19.2",
    "@types/express-fileupload": "1.2.2",
    "axios": "0.26.1",
    "bson": "4.6.4",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.0.1",
    "ethers": "5.6.8",
    "express": "4.17.3",
    "express-fileupload": "1.3.1",
    "file-type": "16.5.3",
    "graphql": "16.5.0",
    "graphql-request": "4.2.0",
    "helmet": "5.0.2",
    "hpp": "0.2.3",
    "http-status": "1.5.0",
    "jsonwebtoken": "8.5.1",
    "morgan": "1.10.0",
    "parse-url": "8.1.0",
    "prisma-exclude": "1.0.2",
    "rate-limiter-flexible": "2.3.6",
    "siwe": "1.1.6",
    "tsconfig-paths": "4.0.0",
    "typera-express": "2.4.4",
    "winston": "3.6.0",
    "winston-daily-rotate-file": "4.6.1",
    "ws": "8.7.0",
    "yup": "0.32.11"
  },
  "devDependencies": {
    "@types/compression": "1.7.2",
    "@types/cookie-parser": "1.4.3",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/hpp": "0.2.2",
    "@types/jsonwebtoken": "8.5.8",
    "@types/morgan": "1.9.3",
    "@types/node": "17.0.21",
    "@types/ws": "8.5.3",
    "copyfiles": "2.4.1",
    "dotenv-vault": "1.11.0",
    "env2ts": "1.4.0",
    "eslint": "8.20.0",
    "nodemon": "2.0.19",
    "rimraf": "3.0.2",
    "tsc-watch": "4.6.2",
    "typescript": "4.7.4"
  }
}
