{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "sourceMap": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "incremental": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "loaders/*": ["src/loaders/*"],
      "config/*": ["src/config/*"],
      "utils/*": ["src/utils/*"],
      "modules/*": ["src/modules/*"],
      "api/*": ["src/api/*"],
      "types/*": ["src/types/*"],
      "errors/*": ["src/errors/*"],
      "resources/*": ["src/resources/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/common"
    },
    {
      "path": "../../packages/prisma"
    },
    {
      "path": "../../packages/contracts"
    }
  ],
  "include": ["src/**/*", ".env"],
  "exclude": ["node_modules", "logs", "dist", "public"]
}
